<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
  </head>
  <link href="/stylesheets/bootstrap.min.css" rel="stylesheet">
  <!--<script src='http://apps.bdimg.com/libs/jquery/2.1.4/jquery.min.js'></script> -->
   <script src="/javascripts/jquery-1.11.3.min.js"></script>
    <!-- 上述3个meta标签*必须*放在最前面，任何其他内容都*必须*跟随其后！ -->
    <title><%= title %></title>
    <!--<script src="http://apps.bdimg.com/libs/jquery/2.1.4/jquery.min.js"></script>-->
     
    <!-- Bootstrap -->
    <link href="/stylesheets/bootstrap.min.css" rel="stylesheet">
     <!--   DatePicker -->
    <script type="text/javascript" src="/javascripts/bootstrap-datepicker.min.js"></script>
    <link rel="stylesheet" type="text/css" href="/stylesheets/bootstrap-datepicker3.min.css" />
    
     <!--   common.js -->
     <script type="text/javascript" src="/javascripts/common.js"></script>
      <script type="text/javascript" src="/javascripts/exhi-controller.js"></script>
  
  
  <script type="text/javascript">

      $(document).ready(function(){ 
          //your code here
  $('#sandbox-container .input-daterange').datepicker({
     format: "yyyy-mm-dd",
     autoclose: true
});

        var host = window.location.host;
        for(var i = 0,q=1; i<$(".exlink").length;i++,q++){

          $(".exlink:eq("+i+")").append('<a href="http://'+host+"/exhi/arts/"+i+'">展会'+q+'（点击我维护beacons信息）</a>');
        }
      
            });

       $(document).ready(function () {
  //your code here
  $('.navbar-nav li').each(function(){$(this).removeClass('active')});
  $('.navbar-nav li:eq(1)').addClass('active');
});
  </script>
  <body>
    <% include base.ejs %>
  <div>
     <div  align="center">
      <h1>共有<%=exhiNum%>个展会</h1>
       <a href="/exhi/addExhi" class="btn btn-primary btn-lg active" role="button">新增展会</a>

    </div>
     
      <div>
    <% exhis.forEach(function (exhi, index) { %>
    <div >
        
        <div title='exhi.subject' style="  height: 300px;
  width: 500px;
  float: left;">
        <ul>
           <li class='exlink'></li> 

          <li>展会名称：<%=exhi.subject%></li>
          <li>展会地点：<%=exhi.vanue%></li>
          <li>展会图片：<img src="<%=exhi.posterURL%>" width="100" height="100"></li>
          <!-- class="btn btn-info"  <li><button  class="btn btn-info">修改展会信息</button></li> --> 
          <li>
            <button class="btnSetExhi btn btn-info" type="button" id="btnSetExhi" value="<%=exhi._id%>">配置展会</button>
            <button class="btnPublishExhi btn btn-success" type="button" id="btnPublishExhi" value="<%=exhi._id%>">发布展会</button>
             <button class="btnDeleteExhi btn btn-danger" type="button" id="btnDeleteExhi" value="<%=exhi._id%>">删除展会</button>

          </li> 
          
        </ul>
        <br>

        </div>
       
      </div>
    <%})%>
</div>
  </body>
</html>